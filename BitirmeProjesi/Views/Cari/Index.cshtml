@using BitirmeProjesi.Models.Classes
@model List<Cariler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<table class="table table-striped">

    <tr>
        <th>Müşteri Id</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Sehir</th>
        <th>Mail</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    
    @foreach(var x in Model)
    {
<tr>
    <td>@x.Cariid</td>
    <td>@x.CariAd</td>
    <td>@x.CariSoyad</td>
    <td>@x.CariSehir</td>
    <td>@x.CariMail</td>

    <td><a href="/Cari/CariSil/@x.Cariid" class="btn btn-danger">Sil</a></td>
    <td><a href="/Cari/CariGetir/@x.Cariid" class="btn btn-warning">Güncelle</a></td>
    <td><a href="/Cari/MusteriSatis/@x.Cariid" class="btn btn-default" style="background-color:royalblue">Satın Alma Geçmişi </a></td>
</tr>
    }
</table>
<a href="/Cari/YeniCari/" class="btn btn-info">Yeni Müşteri Ekle</a>

